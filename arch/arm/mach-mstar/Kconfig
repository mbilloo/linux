menuconfig ARCH_MSTAR
	bool "MStar SoC Support"
	depends on ARCH_MULTI_V7
	select ARM_GIC
	select ARM_HEAVY_MB
	select PINCTRL_MSTAR
	help
	  Support for MStar ARMv7 SoCs

if ARCH_MSTAR

config MACH_INFINITY
	bool "MStar infinity SoC support"
	default ARCH_MSTAR
	help
	  Support for MStar infinity(1/3) IP camera SoCs

config MACH_MERCURY
	bool "MStar mercury SoC support"
	default ARCH_MSTAR
	help
	  Support for MStar mercury5 IP camera SoCs

endif
